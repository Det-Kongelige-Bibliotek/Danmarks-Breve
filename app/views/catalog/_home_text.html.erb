<div id="getting-started">
       <div>
       <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="cookieTerms('terms', 'true', 60)"><span aria-hidden="true">&times;</span></button>
       <p>
         På Danmarks-Brev bruger vi cookies.
       </p>
       <p>
         <%= link_to 'Læs mere', page_path('politik'), :class =>'btn btn-primary btn-sm' %>
       </p>
     </div>
</div>

<script>
    $(function() {
        $('#about a').on('click', function(e) {
            e.preventDefault();

            if ($('#about-content').html() == "") {
                $('#about-content').load($(this).attr("href"), function() {
                    $('#about-content').show();
                });
            } else {
                $('#about-content').toggle();
            }
        });
    });
</script>
